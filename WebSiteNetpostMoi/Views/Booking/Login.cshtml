    <script type="text/javascript">

        $('.forgotpass input').on('focus', function () {
            $('#messforgot').removeClass("d-block").addClass("d-none");
        });

                function forget() {
            $('.fmlogin').removeClass("d-block").addClass("d-none");
            $('.resetPass').removeClass("d-block").addClass("d-none");
            $('.forgotpass').removeClass("d-none").addClass("d-block");
            $('#username').focus();
                }

        $('.arrow-back').on('click', function () {
            $('.register-content').removeClass("d-block").addClass("d-none");
            $('.resetPass').removeClass("d-block").addClass("d-none");
            $('.forgotpass').removeClass("d-block").addClass("d-none");
            $('.fmlogin').removeClass("d-none").addClass("d-block");
            $('.login').removeClass("d-none").addClass("d-block");
            $('#user').focus();
                });

                function SendEmail() {
            $('#refresh2').addClass("fa fa-spinner fa-spin");
            $('#messforgot').removeClass("d-block").addClass("d-none");
                    var username = $('#username').val();
                    var email = $('#email').val();
                    if (username == "") {
                $('#messforgot').html("@Html.Raw(Booking.vadtendangnhap)");
                $('#messforgot').removeClass("d-none").addClass("d-block");
                $('#refresh2').removeClass("fa fa-spinner fa-spin");
                        return;
                    }
                    if (email == "") {
                $('#messforgot').html("@Html.Raw(Booking.vaddcemail)");
                $('#messforgot').removeClass("d-none").addClass("d-block");
                $('#refresh2').removeClass("fa fa-spinner fa-spin");
                        return;
                    }
                    if (!validateEmail(email)) {
                $('#messforgot').html("@Html.Raw(Booking.vaddcemail1)");
                $('#messforgot').removeClass("d-none").addClass("d-block");
                $('#refresh2').removeClass("fa fa-spinner fa-spin");
                        return;
                    }
            $.ajax({
                    url: "/Service/SendEmail",
                type: "POST",
                data: {
                        username: username,
                    email: email
                },
                dataType: 'json',
                success: function (data) {
                    $('#refresh2').removeClass("fa fa-spinner fa-spin");
                            if (!data.Error) {
                                Swal.fire(
                                    '',
                                    data.Title,
                                    'success')
                                $('.resetPass').removeClass("d-block").addClass("d-none");
                        $('.forgotpass').removeClass("d-block").addClass("d-none");
                        $('.fmlogin').removeClass("d-none").addClass("d-block");
                            }
                            else {
                        $('#messforgot').html(data.Title);
                        $('#messforgot').removeClass("d-none").addClass("d-block");
                            }
                        }
                    });
            }

        $('.fmlogin .register').on('click', function () {
            $('.login').removeClass("d-block").addClass("d-none");
            $('.verify_account').removeClass("d-block").addClass("d-none");
            $('.register-detail').removeClass("d-none").addClass("d-block");
            $('.register-content').removeClass("d-none").addClass("d-block");
            $('#tenkh').focus();
            });

        $('.loginnow').on('click', function () {
            $('.register-content').removeClass("d-block").addClass("d-none");
            $('.resetPass').removeClass("d-block").addClass("d-none");
            $('.forgotpass').removeClass("d-block").addClass("d-none");
            $('.fmlogin').removeClass("d-none").addClass("d-block");
            $('.login').removeClass("d-none").addClass("d-block");
            $('#user').focus();
            });

        $('#dcemail').on('focus', function (e) {
            $('#messdangky').removeClass("d-block").addClass("d-none");
            });

        $('#dcemail').on('change', function (e) {
                if (!validateEmail(e.target.value)) {
                $('#messdangky').html("@Html.Raw(Booking.vaddcemail1)");
                $('#messdangky').removeClass("d-none").addClass("d-block");
                }
            });

        function Register() {
            $('#refresh3').addClass("fa fa-spinner fa-spin");
                var hoten = $('#tenkh').val();
                var sodt = $('#sodt').val();
                var email = $('#dcemail').val();
                var _cbTinh = cbTinh.GetValue();
                var _cbHuyen = cbHuyen.GetValue();
                var diachi = $('#diachilayhang').val();
                if (hoten == "") {
                $('#messdangky').html("@Html.Raw(Booking.vadtenkh)");
                $('#messdangky').removeClass("d-none").addClass("d-block");
                $('#refresh3').removeClass("fa fa-spinner fa-spin");
                    return;
                }
                if (sodt == "") {
                $('#messdangky').html("@Html.Raw(Booking.vadsdt)");
                $('#messdangky').removeClass("d-none").addClass("d-block");
                $('#refresh3').removeClass("fa fa-spinner fa-spin");
                    return;
                }
                if (email == "") {
                $('#messdangky').html("@Html.Raw(Booking.vaddcemail)");
                $('#messdangky').removeClass("d-none").addClass("d-block");
                $('#refresh3').removeClass("fa fa-spinner fa-spin");
                    return;
                }
                if (!validateEmail(email)) {
                $('#messdangky').html("@Html.Raw(Booking.vaddcemail1)");
                $('#messdangky').removeClass("d-none").addClass("d-block");
                $('#refresh3').removeClass("fa fa-spinner fa-spin");
                    return;
                }
                if (cbTinh == null) {
                $('#messdangky').html("@Html.Raw(Booking.vadtinhlayhang)");
                $('#messdangky').removeClass("d-none").addClass("d-block");
                $('#refresh3').removeClass("fa fa-spinner fa-spin");
                    return;
                }
                if (cbHuyen == null) {
                $('#messdangky').html("@Html.Raw(Booking.vadquanlayhang)");
                $('#messdangky').removeClass("d-none").addClass("d-block");
                $('#refresh3').removeClass("fa fa-spinner fa-spin");
                    return;
                }
                if (diachi == "") {
                $('#messdangky').html("@Html.Raw(Booking.vaddclayhang)");
                $('#messdangky').removeClass("d-none").addClass("d-block");
                $('#refresh3').removeClass("fa fa-spinner fa-spin");
                    return;
                }

                var dto = {
                NAME: hoten,
                PHONE: sodt,
                EMAIL: email,
                FIN_POST_CODE: _cbTinh,
                FIN_CITY: cbTinh.GetText(),
                FIN_DISTRICT: cbHuyen.GetText(),
                FIN_DISTRICT_CODE: _cbHuyen,
                FIN_STREET: diachi
            };
            $.ajax({
            url: "/Service/Register",
                type: "POST",
                data: {
                dto:dto
                },
                dataType: 'json',
                success: function (data) {
                    $('#refresh3').removeClass("fa fa-spinner fa-spin");
                    if (!data.Error) {
                        Toast.fire({
                        icon: 'success',
                            title: '@Html.Raw(Booking.dangkythanhcong) @Html.Raw(Booking.notexacnhanemail)'
                        });
                        $('#customer_code').val(data.Object.MA_THAM_CHIEU);
                        $('#ma_xn').val(data.Object.GHI_CHU);
                        $('.verify_account').removeClass("d-none").addClass("d-block");
                        $('.register-detail').removeClass("d-block").addClass("d-none");
                    }
                    else {
                        $('#messdangky').html(data.Title);
                        $('#messdangky').removeClass("d-none").addClass("d-block");

                    }
                }
            });

        }

        function VerifyAccount() {
            if ($('#maxacnhan').val()=="") {
                 $('#message_verify').html("@Booking.msgmaxn");
                 $('#message_verify').removeClass('d-none');
                return;
            }

            var data = new FormData();
            data.append("tbCode", $('#tbCode').val());
            data.append("customer_code", $('#customer_code').val());
            data.append("ma_xn", $('#ma_xn').val());
            data.append("maxacnhan", $('#maxacnhan').val());

            $.ajax({
            url: "/Service/VerifyAccount",
                type: "POST",
                data:data,
                processData: false,
                contentType: false,
                success: function (data) {
                    if (data.Error) {
                        $('#message_verify').html(data.Title);
                        $('#message_verify').removeClass('d-none');
                        return;
                    } else {
                        Swal.fire({
                        title: '@Html.Raw(@Booking.Xacminhtaikhoan)',
                                text: "@Html.Raw(@Booking.chuyentrang)",
                                icon: 'success',
                                showCancelButton: false,
                                cancelButtonText: 'No',
                                confirmButtonText: 'OK'
                            })
                            .then(function(willDelete){
                            if (willDelete.value) {
                                window.location.href = "/Booking/DanhSachDonHang";
                            }
                        });
                    }
                }
            });
        }

        var load = false;

        function OnSelectedChanged() {
            load = true;
            cbHuyen.PerformCallback();
        }

        function cbHuyen_BeginCallback(s, e) {
            e.customArgs["zone_code"] = cbTinh.GetValue();
            if (load) {
                s.SetSelectedIndex(-1);
                load = false;
            }
        }

        $('#RenewPass').on('input', function () {
            if ($(this).val() !== '') {
                $(this).attr('type', 'password');
            } else {
                $(this).attr('type', 'text');
            }
        });

        $('#newPass').on('input', function () {
            if ($(this).val() !== '') {
                $(this).attr('type', 'password');
            } else {
                $(this).attr('type', 'text');
            }
        });

        function Reset() {
            $('#refresh1').addClass("fa fa-spinner fa-spin");
            var Username = $('#cuss').val();
            var OldPass = $('#oldPass').val();
            var RePass = $('#newPass').val();
            var pass = $('#RenewPass').val();
            var re = /^[A-Za-z0-9]{4,}$/;
            if (re.test(RePass) == false) {
                $('#message').html('@Html.Raw(Booking.vadidatepasssmoi)');
                $('#message').removeClass("d-none").addClass("d-block");
                $('#refresh1').removeClass("fa fa-spinner fa-spin");
                return;
            }
            if (RePass != pass) {
                $('#message').html('@Html.Raw(Booking.nhaplaipass)');
                $('#message').removeClass("d-none").addClass("d-block");
                $('#refresh1').removeClass("fa fa-spinner fa-spin");
                return;
            }
            if (RePass == OldPass) {
                $('#message').html('@Html.Raw(Booking.passmoitrung)');
                $('#message').removeClass("d-none").addClass("d-block");
                $('#refresh1').removeClass("fa fa-spinner fa-spin");
                return;
            }
            if (Username != null && Username != "" && RePass != null && RePass != "") {
                $.ajax({
                url: "/Booking/ResetPass",
                    type: "POST",
                    data: {
                    Username: Username,
                        Password: RePass
                    },
                    dataType: 'json',
                    success: function (data) {
                        if (data.ID == 0) {
                            Swal.fire({
                            title: '@Html.Raw(@Booking.thaydoipass)',
                                text: "@Html.Raw(@Booking.chuyentrang)",
                                icon: 'success',
                                showCancelButton: false,
                                cancelButtonText: 'No',
                                confirmButtonText: 'OK'
                            })
                                //.then(function (result) {
                                //    console.log(result.value)
                                //})
                                .then(function(willDelete){
                                if (willDelete.value) {
                                    window.location.href = "/Booking/DanhSachDonHang";
                                }
                            });
                        }
                        else {
                            $('#refresh1').removeClass("fa fa-spinner fa-spin");
                            $('#message').html(data.Title);
                            $('#message').removeClass("d-none").addClass("d-block");
                        }
                    }
                })
            }
            else {
                $('#refresh1').removeClass("fa fa-spinner fa-spin");
                $('#message').html('@Html.Raw(@Booking.loithaydoipass)');
                $('#message').show();
            }
        }

        function checkpass() {
            var pass = $('#newPass').val();
            var repass = $('#RenewPass').val();
            if (repass != pass) {
                $('#message').html('@Html.Raw(@Booking.nhaplaipass)');
                $('#message').removeClass("d-none").addClass("d-block");
            }
            else {
                $('#message').removeClass("d-block").addClass("d-none");
            }
        }

        function checkvadidate(obj) {
            var re = /^[A-Za-z0-9]{4,8}$/;
            if (re.test(obj.value) == false) {
                $('#message').html('@Html.Raw(@Booking.vadidatepasssmoi)');
                $('#message').removeClass("d-none").addClass("d-block");
            }
            else {
                $('#message').removeClass("d-block").addClass("d-none");
            }
        }

        function Login() {
            $('#success_message').removeClass("d-block").addClass("d-none");
            var Username = $('#user').val();
            var Password = $('#pass').val();
            $('#refresh').addClass("fa fa-spinner fa-spin");

            if (Username == null || Username == "") {
                $('#refresh').removeClass("fa fa-spinner fa-spin");
                $('#success_message').html("Please enter your Username");
                $('#success_message').removeClass("d-none").addClass("d-block");
                return;
            }
            if (Password == null || Password == "") {
                $('#refresh').removeClass("fa fa-spinner fa-spin");
                $('#success_message').html("Please enter your Password");
                $('#success_message').removeClass("d-none").addClass("d-block");
                return;
            }

            if (Username != null && Username != "" && Password != null && Password != "") {
                $.ajax({
                url: "/Booking/Login",
                    type: "POST",
                    data: {
                    Username: Username,
                        Password: Password
                    },
                    dataType: 'json',
                    success: function (data) {
                        if (data.ID == 1 ||data.ID ==2) {
                            window.location.href = "/Booking/DanhSachDonHang";
                        }
                        //else if (data.ID == 0) {
                        //    window.location.href = "/TraCuu/TraCuu";
                        //}
                        //else if (data.ID == 3) {
                        //    window.location.href = "/TraCuocOnline/TraCuocOnline";
                        //}
                        //else if (data.ID == 4) {
                        //    window.location.href = "/TraCuuDonHang/TraCuuDonHang";
                        //}
                        else if (data.ID == 5) {
                            window.location.href = "/DuLieuChamCong/DuLieuChamCong";
                        }
                        else if (data.ID ==6) {
                            $('#cuss').val(data.Title);
                            $('#oldPass').val(Password);
                            $('.fmlogin').removeClass("d-block").addClass("d-none");
                            $('.resetPass').removeClass("d-none").addClass("d-block");
                        }
                        else if (data.ID == 7) {
                            $('.lstCust').load("/Service/ChonKhachHangBooking");
                            Toast.fire({
                            icon: 'success',
                                title: '@Html.Raw(Booking.notedangnhapthanhcong)'
                            });
                            $('#modal-chondonvi').modal({ backdrop: 'static' });
                        }
                        else {
                            $('#refresh').removeClass("fa fa-spinner fa-spin");
                            $('#success_message').html(data.Title);
                            $('#success_message').removeClass("d-none").addClass("d-block");
                        }
                    }
                })
            }
            else {
                return;
            }
        }

        $(document).on("keypress", function (e) {
            /* ENTER PRESSED*/
            if (e.keyCode == 13) {
                /* FOCUS ELEMENT */
                Login();
            }
        });

        function ChonDonVi() {
            var makhachhang = cbChonKhachHang.GetValue();
            if (makhachhang == null) {
                Swal.fire(
                    '',
                    "@Html.Raw(Booking.msgMaKhachHang)",
                   'error')
                return;
            }
            $.ajax({
            url: "/Booking/ChonDonVi",
                type: "POST",
                data: {
                makhachhang: makhachhang
                },
                dataType: 'json',
                success: function (data) {
                    if (!data.Error) {
                        Toast.fire({
                        icon: 'success',
                                title: data.Title
                            });
                        window.location.href = "/Booking/DonHangMoiTuSinh";
                    }
                    else {
                        Swal.fire(
                            '',
                            data.Title,
                            'error')
                        return;
                    }
                }
            });
        }

        function clickme(string) {
            $.ajax({
            url: "/Home/ChangeLanguage",
                type: "POST",
                data: {
                culture: string
                },
                dataType: 'json',
                success: function (data) {
                    window.location.reload();
                }
            });
        }

        var errorMess = @Html.Raw(Json.Encode(TempData["Error"]));
        if(errorMess!=null)
        {
            Swal.fire(
                 errorMess,
                '',
                'error');
        }
    </script>
