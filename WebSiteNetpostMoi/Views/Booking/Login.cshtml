    <div class="container pb-2">
        <div class="login">
            <div class="row page-container justify-content-center" style="height: 100%;">
                <div class="col-lg-5 align-self-center login-content">
                    <div class="row justify-content-center pb-5">
                        <div class="login-detail">
                            <div class="col-md-12 des">
                                Booking Online
                            </div>
                            <hr />
                            <div class="fmlogin">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="col-form-label">@Booking.username</label>
                                            <input type="text" required id="user" class="form-control" onfocus="$('#success_message').removeClass('d-block').addClass('d-none')" autofocus>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="col-form-label">@Booking.password</label>
                                            <input type="password" required id="pass" class="form-control" onfocus="$('#success_message').removeClass('d-block').addClass('d-none')">
                                        </div>
                                    </div>
                                    <div class="col-md-12 py-2">
                                        <button class="btn btn-danger button btn-login" onclick="Login()"><i class="" id="refresh"> </i>  @Booking.login</button>
                                    </div>

                                    <div class="col-md-12 text-right">
                                        <a class="check button forgetpass" href="javascript:;" onclick="forget()"><span> @Booking.forgotpass ?</span></a>
                                    </div>
                                    <div class="col-md-12" style="height:90px;">
                                        <div class="form-group pt-2">
                                            <div class="alert alert-danger d-none" role="alert" id="success_message" style="margin-bottom:5px;"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        @*<div class="form-group text-center">
                                                @Booking.dacotaikhoan <a class="register" href="javascript:;"> @Booking.dangky</a>
                                            </div>*@
                                    </div>
                                </div>
                            </div>

                            <div class="resetPass d-none">
                                <p> @Booking.doipassdelogin</p>
                                <input type="text" placeholder="Username" id="cuss" hidden>
                                <input type="text" placeholder="oldPass" id="oldPass" hidden>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-form-label">@Booking.passmoi</label>
                                        <input type="text" required id="newPass" class="form-control" autocomplete="off" oninput="checkvadidate(this)" autofocus>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-form-label">@Booking.nhaplaipassmoi</label>
                                        <input type="text" required id="RenewPass" class="form-control" autocomplete="off" oninput="checkpass()">
                                    </div>
                                </div>
                                <div class="col-md-12 pt-2">
                                    <button class="btn btn-primary" onclick="Reset()" style="width:100%"><i class="" id="refresh1"> </i>  @Booking.doipass</button><br />
                                    <div class="alert alert-danger d-none" role="alert" id="message" style="margin-top:5px;padding:10px;"></div>
                                </div>
                            </div>

                            <div class="forgotpass d-none">
                                <p>@Booking.noteforgotpas</p>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-form-label">@Booking.username</label>
                                        <input type="text" id="username" class="form-control" autocomplete="off" autofocus>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-form-label">@Booking.dcemail</label>
                                        <input type="text" id="email" class="form-control" autocomplete="off">
                                    </div>
                                </div>
                                <div class="col-md-12 pt-2">
                                    <button class="btn btn-primary" onclick="SendEmail()" style="width:100%"><i class="" id="refresh2"> </i>  @Booking.khoiphuc </button>
                                </div>
                                <div class="col-md-12" style="height:59px;">
                                    <div class="form-group">
                                        <div class="alert alert-danger d-none" role="alert" id="messforgot" style="margin-top:5px;padding:10px;"></div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group text-center">
                                        <a class="arrow-back" href="javascript:;"> @Booking.back</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
