<section class="news_section">
    <div class="container">
        <div class="row lstTinTuc">
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    var mota = item.MO_TA;
                    <div class="col-md-12" style="margin-bottom:20px;">
                        <div class="portlet row">
                            @if (!string.IsNullOrWhiteSpace(item.FILE_IMG))
                            {
                                <div class="col-md-3 image">
                                    <a href="@Url.Action("Detail", "Tin_Tuc", new { id = item.ID })" title="@Resource.detail">
                                        <img src="@item.FILE_IMG" style="width:100%;" width="328" height="173" />
                                    </a>
                                </div>
                                <div id="title" class="col-md-9">
                                    <p style="padding:0">
                                        <a href="@Url.Action("Detail", "Tin_Tuc", new { id = item.ID })" title="@Resource.detail"><span>@item.TIEU_DE</span></a>
                                    </p>
                                    <br />
                                    <div>@Html.Raw(@mota)</div>
                                </div>
                            }
                            else
                            {
                                <div id="title" class="col-md-9">
                                    <div class="row" style="min-height: 87px;text-align:center">
                                        <a href="@Url.Action("Detail", "Tin_Tuc", new { id = item.ID })" title="@Resource.detail"><span>@item.TIEU_DE</span></a>
                                    </div>
                                    <div>@Html.Raw(@mota)</div>
                                </div>
                            }

                            <div class="col-md-12 content-footer">
                                <p style="padding: 10px; margin: 0px;"><small><i class="fa fa-clock-o"></i> @item.THOI_GIAN.ToString("dd/MM/yyyy HH:mm")</small><a href="@Url.Action("Detail", "Tin_Tuc", new { id = item.ID })" style="text-decoration:underline;float: right;">@Resource.detail</a></p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="row" style="justify-content: flex-end;">
            <div class="col-md-4">
            </div>
            <div class="col-md-8">
                @if (Model.Count > 10)
                {
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                }

            </div>
        </div>
    </div>
</section>
<script>
